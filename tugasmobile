
//main.dart

import 'package:HISTYLING/pagetabbar.dart';
import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: pagelogin(),
    );
  }
}

class pagelogin extends StatefulWidget {
  @override
  _pageloginState createState() => _pageloginState();
}

class _pageloginState extends State<pagelogin> {
  bool tombolmulai = false;
  bool tombolmulaiaktif = false;
  bool daftardipencet = true;
  @override
  Widget build(BuildContext context) {
    var lebar = MediaQuery.of(context).size.width;
    var tinggi = MediaQuery.of(context).size.height;
    return Scaffold(
      body: Stack(
        children: [
          Column(
            children: [
              Container(
                height: tinggi * 4 / 10,
                width: lebar,
                color: Colors.grey[300],
              ),
              Container(
                height: tinggi * 6 / 10,
                width: lebar,
                color: Colors.grey[300],
                child: Center(
                  child: (daftardipencet)
                      ? Container(
                          height: tinggi * 5 / 10,
                          width: lebar * 8 / 10,
                          color: Colors.transparent,
                          child: Column(
                            children: [
                              Align(
                                  alignment: Alignment.centerLeft,
                                  child: Text(
                                    " Email",
                                    style: TextStyle(
                                        fontSize: 14, color: Colors.black),
                                  )),
                              SizedBox(
                                height: 35,
                              ),
                              Container(
                                width: 300,
                                height: 1,
                                color: Colors.black,
                              ),
                              SizedBox(
                                height: 20,
                              ),
                              Align(
                                  alignment: Alignment.centerLeft,
                                  child: Text(
                                    " No.Handphone",
                                    style: TextStyle(
                                        fontSize: 14, color: Colors.black),
                                  )),
                              SizedBox(
                                height: 35,
                              ),
                              Container(
                                width: 300,
                                height: 1,
                                color: Colors.black,
                              ),
                              SizedBox(
                                height: 20,
                              ),
                              Align(
                                  alignment: Alignment.centerLeft,
                                  child: Text(
                                    " Username",
                                    style: TextStyle(
                                        fontSize: 14, color: Colors.black),
                                  )),
                              SizedBox(
                                height: 35,
                              ),
                              Container(
                                width: 300,
                                height: 1,
                                color: Colors.black,
                              ),
                              SizedBox(
                                height: 20,
                              ),
                              Align(
                                  alignment: Alignment.centerLeft,
                                  child: Text(
                                    " Password",
                                    style: TextStyle(
                                        fontSize: 14, color: Colors.black),
                                  )),
                              SizedBox(
                                height: 35,
                              ),
                              Container(
                                width: 300,
                                height: 1,
                                color: Colors.black,
                              ),
                            ],
                          ),
                        )
                      : Container(
                          height: tinggi * 5 / 10,
                          width: lebar * 8 / 10,
                          color: Colors.transparent,
                          child: Column(
                            children: [
                              Align(
                                  alignment: Alignment.centerLeft,
                                  child: Text(
                                    " Email",
                                    style: TextStyle(
                                        fontSize: 14, color: Colors.black),
                                  )),
                              SizedBox(
                                height: 35,
                              ),
                              Container(
                                width: 300,
                                height: 1,
                                color: Colors.black,
                              ),
                              SizedBox(
                                height: 20,
                              ),
                              Align(
                                  alignment: Alignment.centerLeft,
                                  child: Text(
                                    " Password",
                                    style: TextStyle(
                                        fontSize: 14, color: Colors.black),
                                  )),
                              SizedBox(
                                height: 35,
                              ),
                              Container(
                                width: 300,
                                height: 1,
                                color: Colors.black,
                              ),
                              SizedBox(
                                height: 15,
                              ),
                              Align(
                                  alignment: Alignment.centerLeft,
                                  child: Text(
                                    "    Lupa Password ya ? klik disini",
                                    style: TextStyle(
                                        fontSize: 13, color: Colors.orange),
                                  )),
                            ],
                          ),
                        ),
                ),
              ),
            ],
          ),
          Column(
            children: [
              AnimatedContainer(
                duration: Duration(milliseconds: 500),
                height: (tombolmulaiaktif) ? tinggi * 4 / 10 - 40 : tinggi,
                width: lebar,
                color: (tombolmulaiaktif) ? Colors.white : Colors.orange,
                child: Center(
                    child: Text(
                  "USEDCarBY",
                  style: TextStyle(
                      color: (tombolmulaiaktif) ? Colors.orange : Colors.white,
                      fontSize: 30),
                )),
              ),
              Stack(
                children: [
                  Row(
                    children: [
                      GestureDetector(
                        onTap: () {
                          setState(() {
                            daftardipencet = false;
                          });
                        },
                        child: AnimatedContainer(
                          duration: Duration(milliseconds: 500),
                          height: (tombolmulaiaktif) ? 40 : 0,
                          width: lebar / 2,
                          decoration: BoxDecoration(
                              color: Colors.white,
                              borderRadius: BorderRadius.only(
                                  bottomLeft: Radius.circular(20))),
                          child: Center(
                              child: Text(
                            "Login",
                            style: TextStyle(
                                fontSize: 15, fontWeight: FontWeight.bold),
                          )),
                        ),
                      ),
                      GestureDetector(
                        onTap: () {
                          setState(() {
                            daftardipencet = true;
                          });
                        },
                        child: AnimatedContainer(
                          duration: Duration(milliseconds: 500),
                          height: (tombolmulaiaktif) ? 40 : 0,
                          width: lebar / 2,
                          decoration: BoxDecoration(
                              color: Colors.white,
                              borderRadius: BorderRadius.only(
                                  bottomRight: Radius.circular(20))),
                          child: Center(
                              child: Text(
                            "Daftar",
                            style: TextStyle(
                                fontSize: 15, fontWeight: FontWeight.bold),
                          )),
                        ),
                      )
                    ],
                  ),
                  Positioned(
                    bottom: 0,
                    left: (daftardipencet) ? lebar / 2 : null,
                    right: (daftardipencet) ? null : lebar / 2,
                    child: Container(
                      color: Colors.orange,
                      height: 4,
                      width: lebar / 2 - 20,
                    ),
                  )
                ],
              ),
            ],
          ),
          Positioned(
            bottom: 25,
            left: lebar / 8,
            child: GestureDetector(
              onTapDown: (details) {
                setState(() {
                  tombolmulai = true;
                });
              },
              onTapUp: (details) {
                setState(() {
                  tombolmulai = false;
                  if (tombolmulaiaktif) {
                    var route = new MaterialPageRoute(
                        builder: (BuildContext context) => new tabbar());
                    Navigator.of(context).pushReplacement(route);
                  } else {
                    tombolmulaiaktif = true;
                  }
                });
              },
              onTapCancel: () {
                setState(() {
                  tombolmulai = false;
                });
              },
              child: Container(
                height: 70,
                width: lebar * 3 / 4,
                decoration: BoxDecoration(
                    color: (tombolmulai)
                        ? Colors.grey[200]
                        : (tombolmulaiaktif)
                            ? Colors.orange
                            : Colors.white,
                    borderRadius: BorderRadius.circular(25)),
                child: Center(
                    child: Text(
                  (tombolmulaiaktif)
                      ? (daftardipencet)
                          ? "Daftar"
                          : "Login"
                      : "Mulai",
                  style: TextStyle(
                      color: (tombolmulaiaktif) ? Colors.white : Colors.orange,
                      fontSize: 18),
                )),
              ),
            ),
          ),
        ],
      ),
    );
  }
}

//pagetabbar.dart

import 'package:HISTYLING/beran.dart';
import 'package:HISTYLING/profil.dart';
import 'package:HISTYLING/upload.dart';
import 'package:flutter/material.dart';

class tabbar extends StatefulWidget {
  @override
  _tabbarState createState() => _tabbarState();
}

class _tabbarState extends State<tabbar> {
  @override
  Widget build(BuildContext context) {
    TabBar TabBarKu = TabBar(
      unselectedLabelColor: Colors.grey,
      labelColor: Colors.orange,
      tabs: [
        Tab(
          child: Column(
            children: [
              Icon(
                Icons.home,
                size: 30,
              ),
              Text("Beranda", style: TextStyle(fontSize: 13)),
            ],
          ),
        ),
        Tab(
          child: Column(
            children: [
              Icon(
                Icons.camera_alt,
                size: 30,
              ),
              Text(
                "Upload",
                style: TextStyle(fontSize: 13),
              ),
            ],
          ),
        ),
        Tab(
          child: Column(
            children: [
              Icon(
                Icons.account_circle_rounded,
                size: 30,
              ),
              Text("Profil", style: TextStyle(fontSize: 13)),
            ],
          ),
        ),
      ],
    );
    return DefaultTabController(
        length: 3,
        child: Scaffold(
          backgroundColor: Colors.black,
          bottomNavigationBar: Container(
              decoration: BoxDecoration(
                color: Colors.white,
              ),
              height: 60,
              child: TabBarKu),
          body: TabBarView(
            children: [
              beranda(),
              upload(),
              profil(),
            ],
          ),
        ));
  }
}


//beran.dart

import 'package:HISTYLING/dataaa.dart';
import 'package:HISTYLING/detail.dart';
import 'package:flutter/cupertino.dart';
import 'package:flutter/material.dart';

class beranda extends StatefulWidget {
  @override
  _berandaState createState() => _berandaState();
}

class _berandaState extends State<beranda> {
  bool olahraga = false;
  bool pernikahan = false;
  bool nongkrong = false;
  bool pantai = false;
  @override
  Widget build(BuildContext context) {
    var lebar = MediaQuery.of(context).size.width;
    var lebarkategori = lebar / 5 - 6;
    var fontsizekategori = 12.0;
    return Scaffold(
        backgroundColor: Colors.grey[100],
        body: ListView(
          padding: EdgeInsets.all(15),
          children: [
            SizedBox(
              height: 1,
            ),
            Row(
              mainAxisAlignment: MainAxisAlignment.end,
              children: [
                Text(
                  "Hi, User",
                  style: TextStyle(fontSize: 20, color: Colors.orange),
                ),
                SizedBox(
                  width: 5,
                ),
                Icon(
                  Icons.account_circle_rounded,
                  size: 40,
                  color: Colors.orange,
                ),
              ],
            ),
            SizedBox(
              height: 20,
            ),
            Center(
              child: Text(
                "USEDCarsBy",
                style: TextStyle(
                    fontSize: 32,
                    color: Colors.black,
                    fontWeight: FontWeight.bold),
              ),
            ),
            SizedBox(
              height: 20,
            ),
            Container(
              child: Center(
                child: TextField(
                  decoration: InputDecoration(
                      prefixIcon: Icon(Icons.search),
                      border: InputBorder.none,
                      hintText: "Cari di sini.....",
                      hintStyle: TextStyle(
                          color: Colors.grey, fontFamily: "Stanberry")),
                  style: TextStyle(color: Colors.grey[900]),
                ),
              ),
              decoration: BoxDecoration(
                  borderRadius: BorderRadiusDirectional.circular(30),
                  color: Colors.white),
              height: 60,
              width: MediaQuery.of(context).size.width * 75 / 100,
            ),
            SizedBox(
              height: 18,
            ),
            Row(
              mainAxisAlignment: MainAxisAlignment.center,
              children: [
                GestureDetector(
                  onTap: () {
                    setState(() {
                      olahraga = false;
                      pernikahan = false;
                      nongkrong = false;
                      pantai = false;
                    });
                  },
                  child: Column(
                    children: [
                      Container(
                        height: 40,
                        width: lebarkategori,
                        decoration: BoxDecoration(
                          color: Colors.transparent,
                        ),
                        child: Center(
                            child: Text(
                          "Semua",
                          style: TextStyle(
                              fontSize: fontsizekategori,
                              fontWeight: FontWeight.bold,
                              color: (olahraga ||
                                      pernikahan ||
                                      nongkrong ||
                                      pantai)
                                  ? Colors.grey[700]
                                  : Colors.orange),
                        )),
                      ),
                      Container(
                        height: 5,
                        width: lebarkategori,
                        color: (olahraga || pernikahan || nongkrong || pantai)
                            ? Colors.transparent
                            : Colors.orange,
                      )
                    ],
                  ),
                ),
                GestureDetector(
                  onTap: () {
                    setState(() {
                      olahraga = true;
                      pernikahan = false;
                      nongkrong = false;
                      pantai = false;
                    });
                  },
                  child: Column(
                    children: [
                      Container(
                        height: 40,
                        width: lebarkategori,
                        decoration: BoxDecoration(
                          color: Colors.transparent,
                        ),
                        child: Center(
                            child: Text(
                          "MPV",
                          style: TextStyle(
                              fontSize: fontsizekategori,
                              fontWeight: FontWeight.bold,
                              color: (olahraga)
                                  ? Colors.orange
                                  : Colors.grey[700]),
                        )),
                      ),
                      Container(
                        height: 5,
                        width: lebarkategori,
                        color: (olahraga) ? Colors.orange : Colors.transparent,
                      )
                    ],
                  ),
                ),
                GestureDetector(
                  onTap: () {
                    setState(() {
                      olahraga = false;
                      pernikahan = true;
                      nongkrong = false;
                      pantai = false;
                    });
                  },
                  child: Column(
                    children: [
                      Container(
                        height: 40,
                        width: lebarkategori,
                        decoration: BoxDecoration(
                          color: Colors.transparent,
                        ),
                        child: Center(
                            child: Text(
                          "Hatchback",
                          style: TextStyle(
                              fontSize: fontsizekategori,
                              fontWeight: FontWeight.bold,
                              color: (pernikahan)
                                  ? Colors.orange
                                  : Colors.grey[700]),
                        )),
                      ),
                      Container(
                        height: 5,
                        width: lebarkategori,
                        color:
                            (pernikahan) ? Colors.orange : Colors.transparent,
                      )
                    ],
                  ),
                ),
                GestureDetector(
                  onTap: () {
                    setState(() {
                      olahraga = false;
                      pernikahan = false;
                      nongkrong = true;
                      pantai = false;
                    });
                  },
                  child: Column(
                    children: [
                      Container(
                        height: 40,
                        width: lebarkategori,
                        decoration: BoxDecoration(
                          color: Colors.transparent,
                        ),
                        child: Center(
                            child: Text(
                          "SUV",
                          style: TextStyle(
                              fontSize: fontsizekategori,
                              fontWeight: FontWeight.bold,
                              color: (nongkrong)
                                  ? Colors.orange
                                  : Colors.grey[700]),
                        )),
                      ),
                      Container(
                        height: 5,
                        width: lebarkategori,
                        color: (nongkrong) ? Colors.orange : Colors.transparent,
                      )
                    ],
                  ),
                ),
                GestureDetector(
                  onTap: () {
                    setState(() {
                      olahraga = false;
                      pernikahan = false;
                      nongkrong = false;
                      pantai = true;
                    });
                  },
                  child: Column(
