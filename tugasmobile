  GestureDetector buildkotak(
      double lebar, String nama, String isi, String Foto) {
    return GestureDetector(
      onTap: () {
        setState(() {
          var route = new MaterialPageRoute(
              builder: (BuildContext context) => new detail(
                    judul: nama,
                    Isi: isi,
                  ));
          Navigator.of(context).push(route);
        });
      },
      child: Container(
        height: lebar / 2 - 17,
        width: lebar / 2 - 17,
        decoration: BoxDecoration(color: Colors.white, boxShadow: [
          BoxShadow(
              color: Colors.black.withOpacity(0.5),
              blurRadius: 1,
              offset: Offset(0, 1))
        ]),
        child: Column(
          children: [
            Container(
              height: lebar / 2 - 17 - 40,
              color: Colors.white,
              child: Image(
                image: NetworkImage(
                  Foto,
                ),
                fit: BoxFit.contain,
              ),
            ),
            Container(
              height: 40,
              width: lebar / 2 - 17,
              decoration: BoxDecoration(color: Colors.grey[400]),
              child: Row(
                children: [
                  SizedBox(
                    width: 5,
                  ),
                  Container(
                    width: lebar / 2 - 17 - 70 - 10,
